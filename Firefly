        // æ›´æ–°å¿«ä¹æŒ‡æ•°
        function updateHappiness() {
            const happiness = document.getElementById('happiness');
            let value = parseInt(happiness.textContent);
            value = Math.min(100, value + Math.floor(Math.random() * 10));
            happiness.textContent = value;
            
            // éšæœºé¢œè‰²å˜åŒ–
            document.querySelector('.counter').style.background = 
                `hsl(${Math.random() * 360}, 70%, 60%)`;
        }
        
        // æ¯5ç§’æ›´æ–°ä¸€æ¬¡å¿«ä¹æŒ‡æ•°
        setInterval(updateHappiness, 5000);
        
